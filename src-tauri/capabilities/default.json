{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:write-files",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "*"
        }
      ]
    },
    "dialog:default",
    "notification:default",
    "shell:allow-open",
    "shell:allow-stdin-write"
  ]
}