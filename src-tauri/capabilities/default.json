{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Full access to open any file or directory",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-close",
    "core:window:allow-destroy",
    "dialog:default",
    "notification:default",
    "fs:default",
    "fs:write-files",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "*"
        }
      ]
    },
    "opener:default",
    {
      "identifier": "opener:allow-reveal-item-in-dir",
      "allow": [
        {
          "path": "*"
        }
      ]
    }
  ]
}